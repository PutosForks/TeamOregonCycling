<div class="btn-group">
  <% unless current_page?(admin_users_path) %>
    <%= link_to(octicon('arrow-left', :'aria-label' => 'Back to User List'),
                admin_users_path,
                class: 'btn btn-secondary btn-sm',
                data: {
                  toggle: 'tooltip',
                  placement: 'bottom'
                  },
                title: 'Back to User List') %>
  <% end %>
  <% unless current_page?(admin_user_path(user)) %>
    <%= link_to(octicon('eye', :'aria-label' => 'View'),
                admin_user_path(user),
                class: 'btn btn-secondary btn-sm',
                'data-toggle' => 'tooltip',
                'data-placement' => 'bottom',
                title: 'View User Details') %>
  <% end %>
  <% unless current_page?(edit_admin_user_path(user)) %>
    <%= link_to(octicon('pencil', :'aria-label' => 'Edit'),
                edit_admin_user_path(user),
                class: 'btn btn-secondary btn-sm',
                'data-toggle' => 'tooltip',
                'data-placement' => 'bottom',
                title: 'Edit User') %>
  <% end %>
  <% if has_permission?(:delete, on: user) %>
    <%= link_to(octicon('trashcan', :'aria-label' => 'Delete'),
                admin_user_path(user),
                method: :delete,
                title: 'Delete User',
                class: 'btn btn-danger btn-sm',
                data: {
                  toggle: 'tooltip',
                  placement: 'bottom',
                  confirm: 'Are you sure you want to delete ' \
                  "user #{user.display_name}"
                }) %>
  <% else %>
    <button class="btn btn-secondary btn-sm disabled">
      <%= octicon('trashcan', :'aria-label' => 'Delete') %>
    </button>
  <% end %>
</div>
