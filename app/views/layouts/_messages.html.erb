<div id="alerts">
<% flash.to_hash.except('timedout').each do |key, value| %>
  <div class="alert alert-<%= key %>">

    <div class="alert-content">
      <% if value.is_a?(Array) %>
        <ul>
          <li>
            <%= value.html_safe %>
          </li>
        </ul>
        <% else %>
        <p><%= value.html_safe %></p>
      <% end %>
    </div>
    <div class="alert-control">
      <a href="#" data-dismiss="alert" class="close">Ã—</a>
    </div>
  </div>
<% end %>
</div>
